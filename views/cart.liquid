{% layout "layout.liquid" %} {% block content %}
<div>

    <div class="cart">
        <table>
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Delete</th>
                </tr>
            </thead>
            {% for product in products %}
            <tbody>
                <tr>
                    <td>
                        <a href="/products/{{product._id}}">
                            <img class="productImage" src="{{product.image}}" alt="{{product.title}} image"
                                class="image-link" width="150px" height="150px">
                        </a>
                    </td>

                    <td>
                        <p class="productTitle">{{product.title}} </p>
                    </td>

                    <td>
                        <h4 class="productPrice">Price: {{product.price}} </h4>
                    </td>
                    <td>
                        <form action="/products/{{ product._id}}/{{ user._id}}/cart?_method=DELETE" method="POST">
                        <!-- <form action="/products/{{ product._id}}/cart" method="POST"> -->
                       
                            <input type="submit" value="Delete" />
                        </form>
                    </td>

                </tr>
            </tbody>
            {% endfor %}



    </div>
    <br>
    <h3>total:</h3>
    {% endblock %}